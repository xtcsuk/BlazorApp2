@using AntDesign

@if (Data == null)
{
    return;
}

<Select DefaultValue="@CurrentValue"
        Id="antdSelect"
        DropdownMatchSelectWidth="true"
        TItem="string"
        TItemValue="string"
        LabelInValue="false"
        @bind-Value="@_currentValue"
        OnSelectedItemChanged="ItemClicked" Disabled="@Disabled">

    <SelectOptions>
        @foreach (var item in Data)
        {
            if (item.Divider)
            {
                <Divider />
            }
            else
            {
                @if(_userHasAuthorization)
                {
                    <SelectOption Class="@OptionCssClass"
                      TItemValue="string"
                      TItem="string"
                      Value="@item.Id"
                      Label="@item.Description"
                      Disabled="@item.Disabled">
                    </SelectOption>
                }
                else
                {
                    <SelectOption Class="@OptionCssClass"
                      TItemValue="string"
                      TItem="string"
                      Value="@item.Id"
                      Label="@item.Description"
                      Disabled="false">
                    </SelectOption>
                }
            }
        }
    </SelectOptions>
</Select>